<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/image_status_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/ic_contacts_list_status_online" />

    <TextView
        android:id="@+id/text_contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_status_icon"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:text="Eugen Luca"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_contact_status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_contact_title"
        android:layout_toEndOf="@id/image_status_icon"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:text="Available" />

    <ImageView
        android:id="@+id/image_profile_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/ic_contacts_list_avatar_unknown2x" />

</RelativeLayout>